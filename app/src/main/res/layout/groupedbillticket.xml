<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:paddingTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KPLC"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/AmountTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="KSH 10"
                android:textColor="@color/black"
                android:background="@drawable/pricebackground"
                android:paddingRight="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dueDate"
            android:text="Due Septermber 12 2010"
            android:textColor="@color/colorGreenLight"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/switch_thumb_normal_material_light"
            android:layout_margin="5dp"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KPLC TOKENS 0000"
                android:layout_marginTop="10dp"
                android:id="@+id/accountNumber"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="KES 10"
                android:background="@drawable/pricebackground"
                android:layout_marginTop="10dp"
                android:id="@+id/AmountBottom"
                android:paddingRight="10dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/switch_thumb_normal_material_light"
            android:layout_margin="5dp"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="Remove"
                android:id="@+id/Remove"
                android:textColor="@color/red"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="Edit"
                android:id="@+id/Edit"
                android:textColor="@color/red"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>